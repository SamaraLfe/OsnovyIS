<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:baseis.ViewModels"
        x:Class="baseis.Views.DetailsWindow"
        x:DataType="vm:DetailsViewModel"
        Title="{Binding Title}"
        Width="900" Height="600"
        WindowStartupLocation="CenterOwner">

    <DockPanel>
        <!-- Масштабирование вывода в окне деталей -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10" VerticalAlignment="Center">
            <TextBlock Text="Масштаб" VerticalAlignment="Center"/>
            <Slider Minimum="6" Maximum="24" Value="{Binding FontSize}" Width="220"/>
        </StackPanel>

        <Button DockPanel.Dock="Bottom" Content="Закрыть" HorizontalAlignment="Center" Margin="10"
                Click="CloseButton_Click" Width="100"/>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBox Text="{Binding Content}" IsReadOnly="True" FontFamily="Consolas" FontSize="{Binding FontSize}"
                     TextWrapping="NoWrap" AcceptsReturn="True" AcceptsTab="True"/>
        </ScrollViewer>
    </DockPanel>
</Window>
