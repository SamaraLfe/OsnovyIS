<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:baseis.ViewModels"
        x:Class="baseis.Views.FullMatricesWindow"
        x:DataType="vm:FullMatricesViewModel"
        Title="Полные матрицы и сведения"
        Width="1000" Height="700"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="10" Spacing="15">
            <!-- Матрица первого изображения -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="#FFFFFF">
                <StackPanel>
                    <TextBlock Text="Полная матрица первого изображения" FontWeight="Bold" Margin="5"/>
                    <TextBox Text="{Binding SourceMatrix}" IsReadOnly="True" 
                             TextWrapping="Wrap" Height="150" FontFamily="Consolas" 
                             BorderThickness="0" Background="Transparent"/>
                </StackPanel>
            </Border>

            <!-- Матрица второго изображения -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="#FFFFFF">
                <StackPanel>
                    <TextBlock Text="Полная матрица второго изображения" FontWeight="Bold" Margin="5"/>
                    <TextBox Text="{Binding SecondImageMatrix}" IsReadOnly="True" 
                             TextWrapping="Wrap" Height="150" FontFamily="Consolas" 
                             BorderThickness="0" Background="Transparent"/>
                </StackPanel>
            </Border>

            <!-- Обучающая матрица -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="#FFFFFF">
                <StackPanel>
                    <TextBlock Text="Полная обучающая матрица" FontWeight="Bold" Margin="5"/>
                    <TextBox Text="{Binding TrainingMatrix}" IsReadOnly="True" 
                             TextWrapping="Wrap" Height="200" FontFamily="Consolas" 
                             BorderThickness="0" Background="Transparent"/>
                </StackPanel>
            </Border>

            <!-- Эталонные векторы -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="#FFFFFF">
                <StackPanel>
                    <TextBlock Text="Полные эталонные векторы" FontWeight="Bold" Margin="5"/>
                    <TextBox Text="{Binding ReferenceVectors}" IsReadOnly="True" 
                             TextWrapping="Wrap" Height="150" FontFamily="Consolas" 
                             BorderThickness="0" Background="Transparent"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>